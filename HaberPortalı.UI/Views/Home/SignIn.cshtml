
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-5">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="card mb-2">
            <div class="card-header"><h3>Kayıt Ol</h3></div>
            <div class="card-body">
                <div class="mb-2">
                    <label>Ad Soyad</label>
                    <input type="text" class="form-control" id="txtFullName" />
                </div>
                <div class="mb-2">
                    <label>Kullanıcı Adı</label>
                    <input type="text" class="form-control" id="txtUserName" />
                </div>
                <div class="mb-2">
                    <label>E-Posta</label>
                    <input type="text" class="form-control" id="txtEmail" />
                </div>
                <div class="mb-2">
                    <label>Telefon Numarası</label>
                    <input type="text" class="form-control" id="txtPhoneNumber" />
                </div>
                <div class="mb-2">
                    <label>Parola</label>
                    <input type="password" class="form-control" id="txtPassword" />
                </div>
            </div>
            <div class="card-footer">
                <button class="btn btn-primary" id="btnSignIn">Kayıt Ol</button>
            </div>
        </div>
        <div id="result"></div>
    </div>

</div>
@section Scripts{
<script src="~/sbadmin/js/sb-admin-2.min.js"></script>
<script>
    $(document).ready(function () {
        var ApiBaseUrl = "@ViewBag.ApiBaseUrl";
        $("#btnSignIn").click(function () {

            var username = $("#txtUserName").val();
            var password = $("#txtPassword").val();
            var fullname = $("#txtFullName").val();
            var phonenumber = $("#txtPhoneNumber").val();
            var email = $("#txtEmail").val();

            if (username == "" || password == "" || fullname == "" || email == "" || phonenumber == "") {
                $("#divResult")
                    .show()
                    .removeClass()
                    .addClass("alert alert-danger")
                    .html("Tüm Alanları Doldurunuz!")
                    .fadeOut(5000);
                return false;
            }
            var register = new Object();
            register.UserName = username;
            register.Password = password;
            register.FullName = fullname;
            register.PhoneNumber = phonenumber;
            register.Email = email;

            $.ajax({
                url: ApiBaseUrl + "User/Add",
                method: "POST",
                data: JSON.stringify(register),
                contentType: "application/json",
                success: function (data) {
                    if (data.status) {
                        location.href = "/Home/Login";
                    } else {
                        $("#divResult")
                            .show()
                            .removeClass()
                            .addClass("alert alert-danger")
                            .html(data.message)
                            .fadeOut(10000);

                    }
                },
                error: function (e) {
                    console.log(e);
                }
            });
        });

    });
</script>
}